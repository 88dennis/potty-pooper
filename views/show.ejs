<%- include("partials/header") %>
    <h1>READ MORE</h1>
    <div class="ui main text container">
        <div class="ui huge header">Potty Info</div>
        <div class="ui huge header">
            <%= readMoreEjs["name"] %>
        </div>

        <!-- segment creates a space and a border -->
        <div class="ui top attached segment">
            <div class="item">
                <img class="ui centered rounded image" src="<%= readMoreEjs['image'] %>" alt="">
            </div>
            <div class="content">
                <!-- convert the date to a more readable string -->
                <span><%= readMoreEjs["posted"].toDateString() %></span>
            </div>
            <div class="description">
                <p>
                    <%= readMoreEjs["comments"] %>
                </p>
            </div>
            <!-- for a GET request you may use the anchor tag -->
            <a class="ui orange basic button" href="/potties/<%= readMoreEjs._id %>/edit">Edit Post</a>

            <!-- when you are using method override it needs to be a POST method -->
            <form action="/potties/<%= readMoreEjs._id %>?_method=DELETE" method="POST">
                <!-- the button automatically submits this form -->
                <button class="ui red basic button">Delete Post</button>
            </form>

        </div>


    </div>
    <%- include("partials/footer") %>