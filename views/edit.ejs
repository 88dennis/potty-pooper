<%- include("partials/header") %>

    <!-- ALL DATA CAME FROM THE EDIT ROUTE SEE IN APP.JS -->
    <div class="ui main text container segment">
        <div class="ui huge header">Edit
            <%=editPostEjs.name %>
        </div>
        <!-- FROM THE EDIT ROUTE USE THE ID TO COMPLETE THE POST ROUTE See in app.js-->
        <!-- HTML DOES NOT SUPPORT PUT -->
        <!-- YOU NEED TO DO METHOD OVERRIDE ?_method=PUT -->
        <!-- NPM install method-override and REQUIRE IT and USE IT -->
        <form class="ui form" action="/potties/<%= editPostEjs._id %>?_method=PUT" method="POST">
            <div class="field">
                <label for="name">Name</label>
                <!-- we include the name blog eg blog[name] for it to automatically create an object -->
                <input type="text" name="blog[name]" value="<%=editPostEjs.name %>">
            </div>
            <div class="field">
                <label for="image">Image URL</label>
                <input type="text" name="blog[image]" value="<%=editPostEjs.image %>">
            </div>
            <div class="field">
                <label for="comments">Comment</label>
                <textarea name="blog[comments]"><%=editPostEjs.comments%></textarea>
            </div>
            <div class="field">
                <input class="ui violet big basic button" type="submit">
            </div>
        </form>
    </div>

    <%- include("partials/footer") %>